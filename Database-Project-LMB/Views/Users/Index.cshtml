@{
}

<div class="text-center">
    <h1 class="display-4">Users</h1>
    <p>Number of users in the list: @Model.Count</p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Mobile number</th>
            <th>Email Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (User user in Model)
            {
                <tr>
                    <td>@user.UserID</td>
                    <td>@user.UserName</td>
                    <td>@user.MobileNumber</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.UserID" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.UserID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
