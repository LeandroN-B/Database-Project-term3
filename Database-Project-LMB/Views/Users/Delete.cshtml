@model Database_Project_LMB.Models.User

@{
    ViewData["Title"] = "Delete Users";
}

<h4>Delete User</h4>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="UserID" />

    <div class="form-group py-2">
        <label asp-for="UserName">Name:</label>
        <input type="text" asp-for="UserName" class="form-control" readonly />
    </div>

    <div class="form-group py-2">
        <label asp-for="MobileNumber">Mobile number:</label>
        <input type="text" asp-for="MobileNumber" class="form-control" readonly />
    </div>

    <div class="form-group py-2">
        <label asp-for="Email">Email address:</label>
        <input type="text" asp-for="Email" class="form-control" readonly />
    </div>

    <button type="submit" class="btn btn-danger">Delete</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>