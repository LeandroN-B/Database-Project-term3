@model Database_Project_LMB.Models.User

@{
    ViewData["Title"] = "Create User";
}

<h4>New User</h4>

<form asp-action="Create" method="post">
    <!-- ✅ Fix: Uses ASP.NET Core routing -->
    <div class="form-group py-2">
        <label asp-for="UserName">Name:</label>
        <input asp-for="UserName" class="form-control" required />
    </div>

    <div class="form-group py-2">
        <label asp-for="MobileNumber">Mobile number:</label>
        <input asp-for="MobileNumber" class="form-control" required />
    </div>

    <div class="form-group py-2">
        <label asp-for="Email">Email address:</label>
        <input asp-for="Email" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
